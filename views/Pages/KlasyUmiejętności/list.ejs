<%- include('../../fragments/header.ejs') %>
    <main>
        <h2><%= pageTitle %></h2>
        <table class="table-list">
            <thead>
                <tr>
                    <th><%= __('classSkill.fields.Nazwa_Klasy') %></th>
                    <th><%= __('classSkill.fields.Nazwa_Umi') %></th>
                    <th><%= __('classSkill.fields.MaksWrt') %></th>
                    <th><%= __('classSkill.fields.BaseWrt') %></th>
                    <th><%= __('list.actions.title') %></th>
                </tr>
            </thead>
            <tbody>
            <% for (let classSkill of classSkills) { %>
                <tr>
                    <td><%=classSkill.clas.Nazwa_Klasy%></td>
                    <td><%=classSkill.skill.Nazwa%></td>
                    <td><%=classSkill.Maksymaln_Wartosc%></td>
                    <td><%=classSkill.Bazowa_Wartosc%></td>
                <td>
                    <ul >
                        <li>
                            <a href="/classSkills/details/<%=classSkill.ID_Klasy_Umiejetnosci%>" class="list-actions-button-details"><%= __('list.actions.details') %></a>
                        </li>
                        <li>
                            <a href="/classSkills/edit/<%=classSkill.ID_Klasy_Umiejetnosci%>" class="list-actions-button-edit"><%= __('list.actions.edit') %></a>
                        </li>
                        <li>
                            <a href="/classSkills/delete/<%=classSkill.ID_Klasy_Umiejetnosci%>" class="list-actions-button-delete"><%= __('list.actions.delete') %></a>
                        </li>
                    </ul>
                </td>
            </tr>
            <%}%>
            </tbody>

        </table>
        <p><a href="/classSkills/add" class="button-add"><%= __('classSkill.list.addNew') %></a></p>
    </main>
<%- include('../../fragments/footer.ejs') %>