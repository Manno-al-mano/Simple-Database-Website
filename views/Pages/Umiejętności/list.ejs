<%- include('../../fragments/header.ejs') %>
    <main>
        <h2><%= pageTitle %></h2>
        <table class="table-list">
            <thead>
                <tr>
                    <th><%= __('skill.fields.Nazwa_Umi') %></th>
                    <th><%= __('skill.fields.MinLvl') %></th>
                    <th><%= __('skill.fields.Desc') %></th>
                    <th><%= __('list.actions.title') %></th>
                </tr>
            </thead>
            <tbody>
            <% for (let skillunit of skill) { %>
            <td><%=skillunit.Nazwa%></td>
            <td><%=skillunit.MinimalnyPoziomPostaci%></td>
            <td><%=skillunit.Opis%></td>
                <td>
                    <ul>
                        <li>
                            <a href="/skills/details/<%=skillunit.ID_Umiejetnosci%>" class="list-actions-button-details"><%= __('list.actions.details') %></a>
                        </li>
                        <li>
                            <a href="/skills/edit/<%=skillunit.ID_Umiejetnosci%>" class="list-actions-button-edit"><%= __('list.actions.edit') %></a>
                        </li>
                        <li>
                            <a href="/skills/delete/<%=skillunit.ID_Umiejetnosci%>" class="list-actions-button-delete"><%= __('list.actions.delete') %></a>
                        </li>
                    </ul>
                </td>
            </tr>
            <%}%>
            </tbody>
        </table>
        <p><a href="/skills/add"  class="button-add"><%= __('skill.list.addNew') %></a></p>
    </main>
<%- include('../../fragments/footer.ejs') %>